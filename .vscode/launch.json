{
    "configurations": [
        {
            "name": "Run Django app",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "runserver",
                "0.0.0.0:8000"
            ],
            "django": true
        },
        {
            "name": "Run tests",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "test",
                "tags.tests",
                "--pattern=test_*_view.py"
            ],
            "django": true
        }
    ]
}